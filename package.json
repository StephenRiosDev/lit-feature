{
  "name": "lit-feature",
  "version": "1.0.0",
  "description": "Core functionalities and components for integrating with the Lit framework.",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "import": "./dist/decorators/index.js",
      "require": "./dist/decorators/index.cjs"
    },
    "./lit-core": {
      "types": "./dist/lit-core.d.ts",
      "import": "./dist/lit-core.js",
      "require": "./dist/lit-core.cjs"
    },
    "./lit-feature": {
      "types": "./dist/lit-feature.d.ts",
      "import": "./dist/lit-feature.js",
      "require": "./dist/lit-feature.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    },
    "./types/feature-types": {
      "types": "./dist/types/feature-types.d.ts",
      "import": "./dist/types/feature-types.js",
      "require": "./dist/types/feature-types.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "prepack": "npm run build",
    "release": "semantic-release",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "lit": "^2.0.0",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.9",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "semantic-release": "^24.0.0",
    "tsup": "^8.0.1",
    "typescript": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StephenRiosDev/lit-feature.git"
  },
  "keywords": [
    "lit",
    "lit-element",
    "lit-feature",
    "web-components",
    "features"
  ],
  "author": "Stephen Rios",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StephenRiosDev/lit-feature/issues"
  },
  "homepage": "https://github.com/StephenRiosDev/lit-feature#readme"
}
